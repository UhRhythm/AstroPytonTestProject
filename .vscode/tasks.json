{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Astro frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start FastAPI backend",
      "type": "shell",
      "command": "source ../venv/bin/activate && uvicorn main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
